Print left right and right alignment triangle with stars :
//*                  *
//**                **
//***              ***
//****            ****
//*****          *****
//******        ******
//*******      *******
//********    ********
//*********  *********
//********************


#include <iostream>
using namespace std;
int main() {
   	int i, j, r;
	cout << "Enter the amount of rows: ";
	cin >> r;
	for (i = 1; i <= r; i++)
	{
		for (j = 1; j <= i; j++)
		{
			cout << "*";
		}
		for (j = r-1; j >= i; j--)
		{
			cout << " ";
		}
		for (j = r-1; j >= i ; j--)
		{
			cout << " ";
		}
		for (j = 1; j <= i; j++)
		{
			cout << "*";
		}
		cout << endl;
	}
    return 0;
}
