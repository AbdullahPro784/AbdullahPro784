For Printing triangle with numbers from 1 to 8:
//1
//12
//123
//1234
//12345
//123456
//1234567
//12345678


#include <iostream>
using namespace std;
int main() {

   	int i=1, j=1,sum=0;
	do
	{
		
		do
		{
			cout << j;

			j++;
		} 
		while (j<=i);
		j = 1;
		cout << endl;
		i++;
	}
	while (i<=8);
  
    return 0;
}
